<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    >

    <TextView
        android:id="@+id/text_show"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:text="0"
        android:textColor="#fff"
        android:textSize="50sp"
        android:background="#272727"
        android:gravity="end|bottom"
        android:paddingBottom="15dp"
        android:paddingRight="12dp"
        android:paddingLeft="12dp"
        android:paddingTop="12dp"
        />

    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#f00"
        app:columnCount="4"
        app:rowCount="5"
        android:layout_margin="0dp"
        android:padding="0dp"

        >
        <!--
        android:layout_column  指定该单元格在第几列显示
        android:layout_row 指定该单元格在第几行显示
        android:layout_columnSpan  指定该单元格占据的列数
        android:layout_rowSpan 指定该单元格占据的行数
        android:layout_gravity 指定该单元格在容器中的位置
        android:layout_columnWeight（API21加入）列权重
        android:layout_rowWeight（API21加入）   行权重

        -->

        <Button
            android:id="@+id/btn_clear"
            android:padding="0dp"
            android:layout_margin="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:background="@drawable/shape_btn_oth"
            android:textColor="#000"
            android:text="AC"
            android:textSize="30sp"
            android:typeface="monospace"

            />

        <Button
            android:id="@+id/btn_delete"
            android:padding="0dp"
            android:layout_margin="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:background="@drawable/shape_btn_oth"
            android:textColor="#000"
            android:text="退格"
            android:textSize="30sp"
            android:typeface="monospace"

            />


        <Button
            android:id="@+id/btn_divide"
            android:padding="0dp"
            android:layout_margin="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:background="@drawable/shape_btn_oth"
            android:textColor="#000"
            android:text="÷"
            android:textSize="30sp"
            android:typeface="monospace"

            />

        <Button
            android:id="@+id/btn_multiply"
            android:padding="0dp"
            android:layout_margin="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:background="@drawable/shape_btn_oth"
            android:textColor="#000"
            android:text="×"
            android:textSize="30sp"
            android:typeface="monospace"

            />

        <Button
            android:id="@+id/btn_seven"
            android:padding="0dp"
            android:layout_margin="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:background="@drawable/shape_button"
            android:textColor="#000"
            android:text="7"
            android:textSize="30sp"
            android:typeface="monospace"

            />

        <Button
            android:id="@+id/btn_eight"
            android:padding="0dp"
            android:layout_margin="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:background="@drawable/shape_button"
            android:textColor="#000"
            android:text="8"
            android:textSize="30sp"
            android:typeface="monospace"

            />

        <Button
            android:id="@+id/btn_nine"
            android:padding="0dp"
            android:layout_margin="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:background="@drawable/shape_button"
            android:textColor="#000"
            android:text="9"
            android:textSize="30sp"
            android:typeface="monospace"

            />

        <Button
            android:id="@+id/btn_subtract"
            android:padding="0dp"
            android:layout_margin="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:background="@drawable/shape_btn_oth"
            android:textColor="#000"
            android:text="-"
            android:textSize="30sp"
            android:typeface="monospace"

            />

        <Button
            android:id="@+id/btn_four"
            android:padding="0dp"
            android:layout_margin="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:background="@drawable/shape_button"
            android:textColor="#000"
            android:text="4"
            android:textSize="30sp"
            android:typeface="monospace"

            />

        <Button
            android:id="@+id/btn_five"
            android:padding="0dp"
            android:layout_margin="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:background="@drawable/shape_button"
            android:textColor="#000"
            android:text="5"
            android:textSize="30sp"
            android:typeface="monospace"

            />

        <Button
            android:id="@+id/btn_six"
            android:padding="0dp"
            android:layout_margin="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:background="@drawable/shape_button"
            android:textColor="#000"
            android:text="6"
            android:textSize="30sp"
            android:typeface="monospace"

            />

        <Button
            android:id="@+id/btn_add"
            android:padding="0dp"
            android:layout_margin="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:background="@drawable/shape_btn_oth"
            android:textColor="#000"
            android:text="+"
            android:textSize="30sp"
            android:typeface="monospace"

            />

        <Button
            android:id="@+id/btn_one"
            android:padding="0dp"
            android:layout_margin="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:background="@drawable/shape_button"
            android:textColor="#000"
            android:text="1"
            android:textSize="30sp"
            android:typeface="monospace"

            />

        <Button
            android:id="@+id/btn_two"
            android:padding="0dp"
            android:layout_margin="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:background="@drawable/shape_button"
            android:textColor="#000"
            android:text="2"
            android:textSize="30sp"
            android:typeface="monospace"

            />

        <Button
            android:id="@+id/btn_three"
            android:padding="0dp"
            android:layout_margin="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:background="@drawable/shape_button"
            android:textColor="#000"
            android:text="3"
            android:textSize="30sp"
            android:typeface="monospace"

            />

        <Button
            android:id="@+id/btn_equal"
            android:padding="0dp"
            android:layout_margin="0dp"
            app:layout_columnSpan="1"
            app:layout_columnWeight="1"
            app:layout_rowSpan="2"
            app:layout_rowWeight="1"
            android:background="#EE7600"
            android:textColor="#fff"
            android:text="="
            android:textSize="30sp"
            android:typeface="monospace"

            />

        <Button
            android:id="@+id/btn_zero"
            android:padding="0dp"
            android:layout_margin="0dp"
            app:layout_columnSpan="2"
            app:layout_columnWeight="1"
            app:layout_rowSpan="1"
            app:layout_rowWeight="1"
            android:background="@drawable/shape_button"
            android:textColor="#000"
            android:text="0"
            android:textSize="30sp"
            android:typeface="monospace"

            />

        <Button
            android:id="@+id/btn_point"
            android:padding="0dp"
            android:layout_margin="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:background="@drawable/shape_button"
            android:textColor="#000"
            android:text="."
            android:textSize="30sp"
            android:typeface="monospace"


            />

        <!--<Button-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--app:layout_columnWeight="1"-->
        <!--app:layout_rowWeight="1"-->
        <!--/>-->


        <!--<Button-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--app:layout_columnWeight="1"-->
        <!--app:layout_rowWeight="1"-->
        <!--/>-->


    </android.support.v7.widget.GridLayout>


</LinearLayout>
